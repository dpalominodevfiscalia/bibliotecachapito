@model BibliotecaDB.Models.Pago

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdPedido" class="control-label"></label>
                <select asp-for="IdPedido" class="form-control" asp-items="ViewBag.IdPedido"></select>
                <span asp-validation-for="IdPedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input asp-for="FechaPago" class="form-control" type="datetime-local" />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Metodo" class="control-label"></label>
                <input asp-for="Metodo" class="form-control" />
                <span asp-validation-for="Metodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <div>
    <button type="button" onclick="location.href='@Url.Action("Index")'" class="btn btn-secondary">Regresar</button>
</div>
</div>
