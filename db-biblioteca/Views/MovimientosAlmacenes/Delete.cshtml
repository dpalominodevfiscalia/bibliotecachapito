@model BibliotecaDB.Models.MovimientoAlmacen

@{
    ViewData["Title"] = "Eliminar Movimiento de Almacén";
}

<h2>@ViewData["Title"]</h2>

<h3>¿Estás seguro de que deseas eliminar este movimiento?</h3>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Fecha Movimiento</dt>
            <dd class="col-sm-10">@Model.FechaMovimiento.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-2">Tipo Movimiento</dt>
            <dd class="col-sm-10">@Model.TipoMovimiento?.Nombre</dd>

            <dt class="col-sm-2">Producto</dt>
            <dd class="col-sm-10">@Model.Producto?.Nombre</dd>

            <dt class="col-sm-2">Cantidad</dt>
            <dd class="col-sm-10">@Model.Cantidad</dd>

            <dt class="col-sm-2">Almacén Origen</dt>
            <dd class="col-sm-10">@Model.AlmacenOrigen?.Nombre</dd>

            <dt class="col-sm-2">Almacén Destino</dt>
            <dd class="col-sm-10">@(Model.AlmacenDestino != null ? Model.AlmacenDestino.Nombre : "-")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>