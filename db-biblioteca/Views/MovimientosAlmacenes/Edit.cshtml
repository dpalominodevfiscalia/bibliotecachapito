@model BibliotecaDB.Models.MovimientoAlmacen

@{
    ViewData["Title"] = "Editar Movimiento de Almacén";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="form-horizontal">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="IdTipoMovimiento" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <select asp-for="IdTipoMovimiento" asp-items="ViewBag.IdTipoMovimiento" class="form-control"></select>
            <span asp-validation-for="IdTipoMovimiento" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="IdProducto" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <select asp-for="IdProducto" asp-items="ViewBag.IdProducto" class="form-control"></select>
            <span asp-validation-for="IdProducto" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="IdAlmacenOrigen" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <select asp-for="IdAlmacenOrigen" asp-items="ViewBag.IdAlmacenOrigen" class="form-control"></select>
            <span asp-validation-for="IdAlmacenOrigen" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="IdAlmacenDestino" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <select asp-for="IdAlmacenDestino" asp-items="ViewBag.IdAlmacenDestino" class="form-control">
                <option value="">-- Seleccione almacén destino (opcional) --</option>
            </select>
            <span asp-validation-for="IdAlmacenDestino" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Cantidad" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Cantidad" class="form-control" />
            <span asp-validation-for="Cantidad" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Observaciones" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <textarea asp-for="Observaciones" class="form-control"></textarea>
            <span asp-validation-for="Observaciones" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="DocumentoReferencia" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="DocumentoReferencia" class="form-control" />
            <span asp-validation-for="DocumentoReferencia" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}