@model BibliotecaDB.Models.Stock

@{
    ViewData["Title"] = "Detalles de Stock";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Producto</dt>
            <dd class="col-sm-10">@Model.Producto?.Nombre</dd>

            <dt class="col-sm-2">Almacén</dt>
            <dd class="col-sm-10">@Model.Almacen?.Nombre</dd>

            <dt class="col-sm-2">Cantidad Actual</dt>
            <dd class="col-sm-10">@Model.Cantidad</dd>

            <dt class="col-sm-2">Stock Mínimo</dt>
            <dd class="col-sm-10">@Model.StockMinimo</dd>

            <dt class="col-sm-2">Stock Máximo</dt>
            <dd class="col-sm-10">@Model.StockMaximo</dd>

            <dt class="col-sm-2">Estado</dt>
            <dd class="col-sm-10">
                @if (Model.Cantidad <= Model.StockMinimo)
                {
                    <span class="badge badge-danger">Bajo Stock</span>
                }
                else if (Model.Cantidad >= Model.StockMaximo)
                {
                    <span class="badge badge-warning">Sobre Stock</span>
                }
                else
                {
                    <span class="badge badge-success">Normal</span>
                }
            </dd>

            <dt class="col-sm-2">Última Actualización</dt>
            <dd class="col-sm-10">@Model.FechaActualizacion.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-2">Usuario Actualización</dt>
            <dd class="col-sm-10">@Model.UsuarioActualizacion</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Stocks" asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>