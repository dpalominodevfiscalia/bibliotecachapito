@model BibliotecaDB.Models.Stock

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="IdProducto" class="control-label"></label>
        <select asp-for="IdProducto" class="form-control" asp-items="ViewBag.IdProducto">
            <option value="">-- Seleccione Producto --</option>
        </select>
        <span asp-validation-for="IdProducto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdAlmacen" class="control-label"></label>
        <select asp-for="IdAlmacen" class="form-control" asp-items="ViewBag.IdAlmacen">
            <option value="">-- Seleccione Almac√©n --</option>
        </select>
        <span asp-validation-for="IdAlmacen" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cantidad" class="control-label"></label>
        <input asp-for="Cantidad" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StockMinimo" class="control-label"></label>
        <input asp-for="StockMinimo" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="StockMinimo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StockMaximo" class="control-label"></label>
        <input asp-for="StockMaximo" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="StockMaximo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
    </div>
</form>