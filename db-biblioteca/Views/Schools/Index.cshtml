@model IEnumerable<BibliotecaDB.Models.Colegio>

@{
    ViewData["Title"] = "Colegios";
}
 

<p>
    <button type="button" onclick="location.href='@Url.Action("Create")'" class="btn btn-success">Crear Nuevo</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                <button type="button" onclick="location.href='@Url.Action("Edit", new { id = item.Id })'" class="btn btn-primary btn-sm">Editar</button>
                <button type="button" onclick="location.href='@Url.Action("Details", new { id = item.Id })'" class="btn btn-info btn-sm">Detalles</button>
                <button type="button" onclick="location.href='@Url.Action("Delete", new { id = item.Id })'" class="btn btn-danger btn-sm">Eliminar</button>
            </td>
        </tr>
}
    </tbody>
</table>