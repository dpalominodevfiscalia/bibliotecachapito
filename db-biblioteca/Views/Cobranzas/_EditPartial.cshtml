@model BibliotecaDB.Models.Cobranza

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NumeroRecibo" class="control-label"></label>
        <input asp-for="NumeroRecibo" class="form-control" />
        <span asp-validation-for="NumeroRecibo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdCliente" class="control-label"></label>
        <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente" required>
            <option value="">-- Seleccione Cliente --</option>
        </select>
        <span asp-validation-for="IdCliente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdPedidoVenta" class="control-label"></label>
        <select asp-for="IdPedidoVenta" class="form-control" asp-items="ViewBag.IdPedidoVenta">
            <option value="">-- Seleccione Pedido de Venta --</option>
        </select>
        <span asp-validation-for="IdPedidoVenta" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaCobranza" class="control-label"></label>
        <input asp-for="FechaCobranza" class="form-control" type="date" required />
        <span asp-validation-for="FechaCobranza" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Moneda" class="control-label"></label>
        <input asp-for="Moneda" class="form-control" />
        <span asp-validation-for="Moneda" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Monto" class="control-label"></label>
        <input asp-for="Monto" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FormaPago" class="control-label"></label>
        <input asp-for="FormaPago" class="form-control" />
        <span asp-validation-for="FormaPago" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReferenciaPago" class="control-label"></label>
        <input asp-for="ReferenciaPago" class="form-control" />
        <span asp-validation-for="ReferenciaPago" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Observaciones" class="control-label"></label>
        <textarea asp-for="Observaciones" class="form-control"></textarea>
        <span asp-validation-for="Observaciones" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estado" class="control-label"></label>
        <input asp-for="Estado" class="form-control" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cobrador" class="control-label"></label>
        <input asp-for="Cobrador" class="form-control" />
        <span asp-validation-for="Cobrador" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
    </div>
</form>