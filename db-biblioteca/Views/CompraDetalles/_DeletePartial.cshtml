@model BibliotecaDB.Models.CompraDetalle

<form asp-action="Delete">
    <div class="modal-body">
        <h5>¿Estás seguro de que deseas eliminar este detalle de compra?</h5>
        <div class="alert alert-warning">
            <p><strong>Producto:</strong> @(Model.Producto?.Nombre ?? "N/A")</p>
            <p><strong>Descripción:</strong> @Model.Descripcion</p>
            <p><strong>Cantidad:</strong> @Model.CantidadSolicitada @Model.UnidadMedida</p>
            <p><strong>Total:</strong> @Model.TotalParcial</p>
        </div>
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
    </div>
</form>