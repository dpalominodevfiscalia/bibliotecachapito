@model IEnumerable<BibliotecaDB.Models.Modulo>

@{
    ViewData["Title"] = "Módulos";
}

<!-- Add drag-and-drop libraries -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>

<div class="d-flex justify-content-between mb-3">
    <div>
        @if (ViewContext.HttpContext.Items["HasCreateModuloPermission"] as bool? ?? false)
        {
            <button  title="Crear Nuevo" type="button" class="btn btn-success" data-toggle="modal" data-target="#createModal">
                <i class="fas fa-plus"></i>
            </button>
        }
    </div>
    <div class="action-buttons">
        @if (ViewContext.HttpContext.Items["HasEditModuloPermission"] as bool? ?? false)
        {
            <button type="button" class="btn btn-primary btn-sm" id="editSelected" disabled>
                <i class="fas fa-edit" ></i> 
            </button>
        }
        @if (ViewContext.HttpContext.Items["HasDetailsModuloPermission"] as bool? ?? false)
        {
            <button type="button" class="btn btn-info btn-sm" id="detailsSelected" disabled>
                <i class="fas fa-info-circle"></i>
            </button>
        }
        @if (ViewContext.HttpContext.Items["HasDeleteModuloPermission"] as bool? ?? false)
        {
            <button type="button" class="btn btn-danger btn-sm" id="deleteSelected" disabled>
                <i class="fas fa-trash"></i>
            </button>
        }
        @if (ViewContext.HttpContext.Items["HasToggleModuloPermission"] as bool? ?? false)
        {
            <button type="button" class="btn btn-warning btn-sm" id="toggleSelected" disabled>
                <i class="fas fa-power-off"></i> <span id="toggleButtonText"> </span>
            </button>
        }
        @if (ViewContext.HttpContext.Items["HasEditModuloPermission"] as bool? ?? false)
        {
            <button type="button" class="btn btn-secondary btn-sm" id="saveOrder">
                <i class="fas fa-save"></i> Guardar Orden
            </button>
        }
    </div>
</div>

<table class="table" id="modulosTable">
    <thead>
        <tr>
            <th>
                <input type="radio" name="selectModulo" id="selectAll" onchange="toggleSelectAll()">
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ruta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orden)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
        </tr>
    </thead>
    <tbody id="modulosTableBody">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="radio" name="selectModulo" class="modulo-radio" value="@item.Id" data-moduloname="@item.Nombre" data-state="@item.Estado" onchange="handleModuloSelection()">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    <i class="@item.Icono"></i> @item.Icono
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ruta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Orden)
                </td>
                <td>
                   @if (item.Estado == "Activo")
                   {
                       <span class="badge badge-success">
                           <i class="fas fa-check-circle"></i> @item.Estado
                       </span>
                   }
                   else
                   {
                       <span class="badge badge-danger">
                           <i class="fas fa-times-circle"></i> @item.Estado
                       </span>
                   }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">Crear Módulo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Content will be loaded via AJAX -->
                <div id="createModalContent"></div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Editar Módulo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Content will be loaded via AJAX -->
                <div id="editModalContent"></div>
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Detalles de Módulo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Content will be loaded via AJAX -->
                <div id="detailsModalContent"></div>
            </div>
        </div>
    </div>
</div>

<!-- Toggle Modal -->
<div class="modal fade" id="toggleModal" tabindex="-1" role="dialog" aria-labelledby="toggleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="toggleModalLabel">Confirmar Cambio de Estado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="toggleModalMessage">¿Está seguro de que desea <span id="toggleActionText"></span> este módulo?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="confirmToggle">Confirmar</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Eliminar Módulo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Content will be loaded via AJAX -->
                <div id="deleteModalContent"></div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        var selectedModuloId = null;
        var selectedModuloName = null;
        var selectedModuloState = null;

        function handleModuloSelection() {
            var radio = event.target;
            if (radio.checked) {
                selectedModuloId = radio.value;
                selectedModuloName = radio.dataset.moduloname;
                selectedModuloState = radio.dataset.state;

                // Update toggle button text based on modulo state
                $('#toggleButtonText').text(selectedModuloState === "Activo" ? "Desactivar" : "Activar");

                // Enable action buttons
                $('#editSelected').prop('disabled', false);
                $('#detailsSelected').prop('disabled', false);
                $('#deleteSelected').prop('disabled', false);
                $('#toggleSelected').prop('disabled', false);
            }
        }

        function toggleSelectAll() {
            var radios = document.querySelectorAll('.modulo-radio');
            radios.forEach(function(radio) {
                radio.checked = false;
            });
            selectedModuloId = null;
            selectedModuloName = null;
            selectedModuloState = null;

            // Disable action buttons
            $('#editSelected').prop('disabled', true);
            $('#detailsSelected').prop('disabled', true);
            $('#deleteSelected').prop('disabled', true);
            $('#toggleSelected').prop('disabled', true);
        }

        $(document).ready(function() {
            // Handle modal loading via AJAX
            $('#createModal').on('show.bs.modal', function (event) {
                var modal = $(this);
                $.get('@Url.Action("Create")', function(data) {
                    modal.find('#createModalContent').html(data);
                });
            });

            // Handle action buttons
            $('#editSelected').click(function() {
                if (selectedModuloId) {
                    var url = '@Url.Action("Edit", new { id = "__id__" })'.replace('__id__', selectedModuloId);
                    $.get(url, function(data) {
                        $('#editModalContent').html(data);
                        $('#editModal').modal('show');
                    });
                }
            });

            $('#detailsSelected').click(function() {
                if (selectedModuloId) {
                    var url = '@Url.Action("Details", new { id = "__id__" })'.replace('__id__', selectedModuloId);
                    $.get(url, function(data) {
                        $('#detailsModalContent').html(data);
                        $('#detailsModal').modal('show');
                    });
                }
            });

            $('#deleteSelected').click(function() {
                if (selectedModuloId) {
                    var url = '@Url.Action("Delete", new { id = "__id__" })'.replace('__id__', selectedModuloId);
                    $.get(url, function(data) {
                        $('#deleteModalContent').html(data);
                        $('#deleteModal').modal('show');
                    });
                }
            });

            $('#toggleSelected').click(function() {
                if (selectedModuloId) {
                    var actionText = selectedModuloState === "Activo" ? "desactivar" : "activar";
                    $('#toggleActionText').text(actionText);
                    $('#toggleModal').modal('show');
                    $('#confirmToggle').data('id', selectedModuloId).data('url', '@Url.Action("ToggleEstado")');
                }
            });

            // Handle form submission via AJAX
            $(document).on('submit', 'form', function(e) {
                e.preventDefault();
                var form = $(this);
                var url = form.attr('action');
                var method = form.attr('method') || 'POST';

                // Get form data including anti-forgery token
                var formData = new FormData(form[0]);

                $.ajax({
                    url: url,
                    type: method,
                    data: formData,
                    processData: false,
                    contentType: false,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    success: function(result) {
                        if (result.success) {
                            // Show success message
                            if (result.message) {
                                toastr.success(result.message);
                            }
                            // Close modal and refresh page after delay
                            $('.modal').modal('hide');
                            setTimeout(function() {
                                location.reload();
                            }, 2000);
                        } else {
                            // Show validation errors
                            form.replaceWith(result);
                        }
                    },
                    error: function(xhr) {
                        // Handle error
                        console.log(xhr.responseText);
                        if (xhr.status == 200 && xhr.responseText) {
                            // This might be HTML with validation errors
                            form.replaceWith(xhr.responseText);
                        } else if (xhr.status == 400 && xhr.responseText) {
                            // Handle validation errors
                            form.replaceWith(xhr.responseText);
                        }
                    }
                });
            });

            // Handle toggle modal
            $('#toggleModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                var url = button.data('action');
                var currentState = button.data('current-state');

                var modal = $(this);
                var actionText = currentState === "Activo" ? "desactivar" : "activar";
                modal.find('#toggleActionText').text(actionText);
                modal.find('#confirmToggle').data('id', id).data('url', url);
            });

            $('#confirmToggle').click(function() {
                var id = $(this).data('id');
                var url = $(this).data('url');

                $.ajax({
                    url: url,
                    type: 'POST',
                    data: { id: id },
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    success: function(result) {
                        if (result.success) {
                            toastr.success('Estado actualizado exitosamente');
                            $('#toggleModal').modal('hide');
                            setTimeout(function() {
                                location.reload();
                            }, 2000);
                        }
                    },
                    error: function(xhr) {
                        toastr.error('Error al actualizar el estado');
                    }
                });
            });

            // Initialize drag-and-drop for module ordering
            $(document).ready(function() {
                // Make table body sortable
                $("#modulosTableBody").sortable({
                    cursor: "move",
                    opacity: 0.7,
                    axis: "y",
                    update: function(event, ui) {
                        // Enable save button when order changes
                        $('#saveOrder').prop('disabled', false);
                    }
                });

                // Handle save order button click
                $('#saveOrder').click(function() {
                    // Get the new order of module IDs
                    var moduleIds = [];
                    $('#modulosTableBody tr').each(function() {
                        var moduloId = $(this).find('.modulo-radio').val();
                        if (moduloId) {
                            moduleIds.push(parseInt(moduloId));
                        }
                    });

                    // Send AJAX request to update order
                    $.ajax({
                        url: '@Url.Action("UpdateModuleOrder")',
                        type: 'POST',
                        data: { moduleIds: moduleIds },
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        success: function(result) {
                            if (result.success) {
                                toastr.success(result.message);
                                $('#saveOrder').prop('disabled', true);
                            }
                        },
                        error: function(xhr) {
                            toastr.error('Error al guardar el orden de módulos');
                        }
                    });
                });
            });
        });
    </script>
}