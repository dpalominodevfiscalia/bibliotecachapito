@model BibliotecaDB.Models.ProgramacionOrdenProduccion

<div class="modal-header">
    <h5 class="modal-title">Detalles de Programación de Orden de Producción</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Código:</dt>
        <dd class="col-sm-10">@Model.CodigoOrden</dd>

        <dt class="col-sm-2">Nombre:</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Descripción:</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Fecha Programada:</dt>
        <dd class="col-sm-10">@Model.FechaProgramada.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Fecha Inicio:</dt>
        <dd class="col-sm-10">@Model.FechaInicio.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Fecha Fin:</dt>
        <dd class="col-sm-10">@(Model.FechaFin.HasValue ? Model.FechaFin.Value.ToString("dd/MM/yyyy") : "N/A")</dd>

        <dt class="col-sm-2">Estado:</dt>
        <dd class="col-sm-10">
            <span class="badge @(Model.Estado == "Activo" ? "badge-success" : "badge-danger")">
                @Model.Estado
            </span>
        </dd>

        <dt class="col-sm-2">Prioridad:</dt>
        <dd class="col-sm-10">@Model.Prioridad</dd>

        <dt class="col-sm-2">Responsable:</dt>
        <dd class="col-sm-10">@Model.Responsable</dd>

        <dt class="col-sm-2">Creado Por:</dt>
        <dd class="col-sm-10">@Model.CreadoPor</dd>

        <dt class="col-sm-2">Fecha Creación:</dt>
        <dd class="col-sm-10">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Modificado Por:</dt>
        <dd class="col-sm-10">@Model.ModificadoPor</dd>

        <dt class="col-sm-2">Fecha Modificación:</dt>
        <dd class="col-sm-10">@(Model.FechaModificacion.HasValue ? Model.FechaModificacion.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")</dd>
    </dl>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
</div>