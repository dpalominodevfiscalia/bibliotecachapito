@model BibliotecaDB.Models.MenuViewModel

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MenuItem.Id" />
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="MenuItem.Title" class="control-label"></label>
        <input asp-for="MenuItem.Title" class="form-control" />
        <span asp-validation-for="MenuItem.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MenuItem.Url" class="control-label"></label>
        <input asp-for="MenuItem.Url" class="form-control" />
        <span asp-validation-for="MenuItem.Url" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MenuItem.Icon" class="control-label"></label>
        <input asp-for="MenuItem.Icon" class="form-control" />
        <span asp-validation-for="MenuItem.Icon" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MenuItem.Estado" class="control-label"></label>
        <select asp-for="MenuItem.Estado" class="form-control">
            <option value="Activo">Activo</option>
            <option value="Inactivo">Inactivo</option>
        </select>
        <span asp-validation-for="MenuItem.Estado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MenuItem.ModuloId" class="control-label">Módulo</label>
        <select asp-for="MenuItem.ModuloId" asp-items="ViewBag.Modulos" class="form-control">
            <option value="">-- Seleccione Módulo --</option>
        </select>
        <span asp-validation-for="MenuItem.ModuloId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Perfiles</label>
        @if (Model.Profiles != null)
            @foreach (var profile in Model.Profiles)
            {
                <div class="form-check">
                    <input type="checkbox" name="selectedProfiles" value="@profile.Id" class="form-check-input" @(Model.MenuItem.Profiles != null && Model.MenuItem.Profiles.Contains(profile.Id) ? "checked" : "") />
                    <label class="form-check-label">@profile.Nombre (@profile.Id)</label>
                </div>
            }
    </div>
    <div class="form-group">
        <label class="control-label">Roles</label>
        @if (Model.Roles != null)
            @foreach (var role in Model.Roles)
            {
                <div class="form-check">
                    <input type="checkbox" name="selectedRoles" value="@role.Id" class="form-check-input" @(Model.MenuItem.Roles != null && Model.MenuItem.Roles.Contains(role.Id) ? "checked" : "") />
                    <label class="form-check-label">@role.Nombre (@role.Id)</label>
                </div>
            }
    </div>
    <div class="form-group">
        <label class="control-label">Acciones</label>
        @if(Model.AvailableActions!=null)
        @foreach (var action in Model.AvailableActions)
        {
            <div class="form-check">
                <input type="checkbox" name="selectedActions" value="@action.Id" class="form-check-input" @(Model.MenuItem.ActionIds != null && Model.MenuItem.ActionIds.Contains(action.Id) ? "checked" : "") />
                <label class="form-check-label">@action.Tipo (@action.Nombre)</label>
            </div>
        }
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>