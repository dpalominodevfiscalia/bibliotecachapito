@model BibliotecaDB.Models.CondicionPago

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Nombre" class="control-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion" class="control-label">Descripción</label>
        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="DiasCredito" class="control-label">Días de Crédito</label>
                <input asp-for="DiasCredito" class="form-control" type="number" />
                <span asp-validation-for="DiasCredito" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Tipo" class="control-label">Tipo</label>
                <select asp-for="Tipo" class="form-control">
                    <option value="">Seleccionar tipo</option>
                    <option value="Contado">Contado</option>
                    <option value="Crédito">Crédito</option>
                    <option value="Mixto">Mixto</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="DescuentoPorProntoPago" class="control-label">Descuento por Pronto Pago (%)</label>
                <input asp-for="DescuentoPorProntoPago" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="DescuentoPorProntoPago" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="FormaPago" class="control-label">Forma de Pago</label>
                <select asp-for="FormaPago" class="form-control">
                    <option value="">Seleccionar forma</option>
                    <option value="Transferencia">Transferencia Bancaria</option>
                    <option value="Cheque">Cheque</option>
                    <option value="Efectivo">Efectivo</option>
                    <option value="Tarjeta">Tarjeta de Crédito/Débito</option>
                    <option value="Mixto">Mixto</option>
                </select>
                <span asp-validation-for="FormaPago" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Moneda" class="control-label">Moneda</label>
                <select asp-for="Moneda" class="form-control">
                    <option value="">Seleccionar moneda</option>
                    <option value="PEN">Soles (PEN)</option>
                    <option value="USD">Dólares (USD)</option>
                    <option value="EUR">Euros (EUR)</option>
                </select>
                <span asp-validation-for="Moneda" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="AplicaImpuestos" class="control-label">Aplica Impuestos</label>
                <select asp-for="AplicaImpuestos" class="form-control">
                    <option value="">Seleccionar opción</option>
                    <option value="Si">Sí</option>
                    <option value="No">No</option>
                </select>
                <span asp-validation-for="AplicaImpuestos" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Observaciones" class="control-label">Observaciones</label>
        <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Observaciones" class="text-danger"></span>
    </div>

    <div class="modal-footer">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
    </div>
</form>