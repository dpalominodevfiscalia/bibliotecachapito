@model BibliotecaDB.Models.CondicionPago

<form asp-action="Delete">
    <div class="modal-body">
        <h5>¿Estás seguro de que deseas eliminar esta condición de pago?</h5>
        <div class="alert alert-warning">
            <p><strong>Nombre:</strong> @Model.Nombre</p>
            <p><strong>Descripción:</strong> @Model.Descripcion</p>
            <p><strong>Días de Crédito:</strong> @Model.DiasCredito días</p>
        </div>
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
    </div>
</form>